@using ResumeBuilder.Shared.Models;
@inherits ResumeSingleView<UserInfoModel>;

<h2 class="section-header">
    <span>Your Details</span>
</h2>

<div class="input-wrapper">
    <label for="user-name">
        <span class="label">Name</span>
    </label>
    <InputText class="input input-text" id="user-name" @bind-Value="Info.Name" />
</div>

<div class="input-wrapper">
    <label for="user-title">
        <span class="label">Title</span>
    </label>
    <InputText class="input input-text" id="user-title" @bind-Value="Info.Title" />
</div>

<div class="input-wrapper">
    <label for="user-email">
        <span class="label">Email Address</span>
    </label>
    <InputText class="input input-text" id="user-email" @bind-Value="Info.Email" />
</div>

<div class="input-wrapper">
    <label for="user-phone">
        <span class="label">Phone Number</span>
    </label>
    <InputText class="input input-text" id="user-phone" @bind-Value="Info.Phone" />
</div>

<div class="input-wrapper">
    <label for="user-about">
        <span class="label">About</span>
    </label>
    <InputTextArea class="input input-text" id="user-about" @bind-Value="Info.About" />
</div>
