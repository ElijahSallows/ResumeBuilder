@using ResumeBuilder.Shared.Models;
@inherits ResumeListView<Education>

<h2 class="section-header">
    <span>Education</span>
    <button class="oi oi-plus" @onclick="@OnAddClicked"></button>
</h2>

@foreach (var education in List)
{
    <div class="education list-wrapper">
        <div class="education-delete-wrapper delete-wrapper">
            <button @onclick="() => Delete(education)" class="oi oi-trash"></button>
        </div>

        <div class="input-wrapper">
            <label for="edu-name">
                <span class="label">School Name</span>
            </label>
            <InputText class="input bordered input-text" placeholder="Type here..." id="edu-name" @bind-Value="education.SchoolName" />
        </div>

        <div class="input-wrapper">
            <label for="edu-title">
                <span class="label">Title</span>
            </label>
            <InputText class="input bordered input-text" placeholder="Type here..." id="edu-title" @bind-Value="education.Title" />
        </div>

        <div class="dates-wrapper">
            <div class="input-wrapper">
                <label for="edu-start">
                    <span class="label">Start Date</span>
                </label>
                <InputDate class="input bordered input-date" id="edu-start" @bind-Value="education.StartDate" TValue="DateTime" />
            </div>

            <div class="input-wrapper">
                <label for="edu-end">
                    <span class="label">End Date</span>
                </label>
                @* Bug at https://github.com/dotnet/razor/issues/7684 forces us to use string interpolation *@
                <InputDate class=@($"input bordered input-date {(education.Current ? "disabled" : "")}")
                           id="edu-end"
                @bind-Value="education.EndDate"
                           TValue="DateTime"
                           disabled="@education.Current" />
            </div>

            <div class="input-wrapper">
                <label for="edu-current">
                    <span class="label">Current?</span>
                </label>
                <InputCheckbox class="input bordered input-check" id="edu-current" @bind-Value="education.Current" />
            </div>
        </div>
        <InputTextList List="education.Points"
                       T=Education
                       OnUpdated="@OnUpdated" />
    </div>
}
